{
    "name": "Codespace for Local Development Environment",
    "build": {
        "dockerfile": ".docker/nginx-php/Dockerfile",
        "context": ".docker/nginx-php"
    },
    "overrideCommand": false,
    "appPort": [80],
    "forwardPorts": [80],
    "portsAttributes": {
        "80": {
            "label": "Application",
            "onAutoForward": "notify",
            "elevateIfNeeded": true
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "true",
        "MULTISITE": ""
    },
    "postCreateCommand": "/usr/local/bin/setup.sh",
    "remoteUser": "root",
    "extensions": [
        "dlech.chmod",
        "dbaeumer.vscode-eslint",
        "bmewburn.vscode-intelephense-client",
        "wongjn.php-sniffer",
        "esbenp.prettier-vscode",
        "MehediDracula.php-namespace-resolver",
        "johnbillion.vscode-wordpress-hooks"
    ]
}
