{
    "name": "Codespace for Local Development Environment",
    "build": {
        "dockerfile": "nginx-php/Dockerfile",
        "context": ".."
    },
    "forwardPorts": [80],
    "portsAttributes": {
        "80": {
            "label": "Application"
        },
        "8081": {
            "label": "phpMyAdmin"
        },
        "8082": {
            "label": "MailHog"
        },
        "9000": {
            "label": "PHP-FPM"
        }
    },
    "containerEnv": {
        "XDEBUG": "disable"
    },
    "remoteEnv": {
        "ENABLE_ELASTICSEARCH": "",
        "ENABLE_MAILHOG": "true",
        "MULTISITE": ""
    },
    "updateContentCommand": {
        "composer": "cd ${CODESPACE_VSCODE_FOLDER} && composer install --no-interaction"
    },
    "postCreateCommand": {
        "install": "/usr/local/bin/setup.sh"
    },
    "workspaceFolder": "/wp/wp-content",
    "remoteUser": "root",
    "extensions": [
        "dlech.chmod",
        "dbaeumer.vscode-eslint",
        "bmewburn.vscode-intelephense-client",
        "wongjn.php-sniffer",
        "esbenp.prettier-vscode",
        "MehediDracula.php-namespace-resolver",
        "johnbillion.vscode-wordpress-hooks"
    ]
}
