{
    "name": "WordPress",
    "dockerComposeFile": "docker-compose.yml",
    "service": "nginx",
    "forwardPorts": [80],
    "portsAttributes": {
        "nginx:80": {
            "label": "Application",
            "onAutoForward": "notify"
        }
    },
    "initializeCommand": "echo \"HOST_UID=$(id -u)\nHOST_GID=$(id -g)\" > .devcontainer/.env",
    "workspaceFolder": "/wp/wp-content"
}
