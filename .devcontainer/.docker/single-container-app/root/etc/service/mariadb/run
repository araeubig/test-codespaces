#!/bin/sh

set -eu
exec 2>&1

if [ -d /workspaces/mysql ]; then
    echo "Found /workspaces/mysql"
    if [ -d /var/lib/mysql ] && [ -z "$(ls -A /var/lib/mysql)" ]; then
        echo "Found empty /var/lib/mysql directory"
        if ! mountpoint -q /var/lib/mysql; then
            echo "/var/lib/mysql is not a mountpoint, restoring"
            rm -f /var/lib/mysql
            ln -s /workspaces/mysql /var/lib/mysql
        else
            echo "ERROR: /var/lib/mysql is a mountpoint"
            exit 1
        fi
    else
        echo "ERROR: /var/lib/mysql is not empty or not a directory"
        exit 1
    fi
    /usr/bin/install -d -m 02755 -o mysql -g mysql /workspaces/mysql
else
    # /var/lib/mysql can be a volume
    /usr/bin/install -d -D -m 02755 -o mysql -g mysql /var/lib/mysql
fi

/usr/bin/install -d /run/mysqld -o mysql -g mysql

if [ ! -d /var/lib/mysql/mysql ]; then
    /usr/bin/mysql_install_db --auth-root-authentication-method=normal --skip-test-db --user=mysql --datadir=/var/lib/mysql
fi

exec /sbin/su-exec mysql /usr/bin/mysqld --sql-mode=ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION --max_allowed_packet=67M --skip_networking=0 --bind-address=127.0.0.1
